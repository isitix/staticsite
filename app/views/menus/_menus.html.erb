<nav id="nav">
    <ul>
        <% top_menus.each do |menu| %>
            <li><%= link_to ("<span>" + menu.name + "</span>").html_safe, menu.article, class: menu.icon %>
                <% if menu.menus.count > 0 %>
                    <ul>
                        <% menu.menus.each do |menu2| %>
                            <li><%= link_to menu2.name, menu.article %></li>
                            <% if menu2.menus.count > 0 %>
                                <ul>
                                    <% menu2.menus.each do |menu3| %>
                                        <li><%= link_to menu3.name, menu.article %></li>
                                    <% end %>
                                </ul>
                            <% end %>
                        <% end %>
                    </ul>
                <% end %>
            </li>
        <% end %>
    </ul>
</nav>
