<p id="notice"><%= notice %></p>

<h1>Listing Menus</h1>

<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Level</th>
        <th>Menu</th>
        <th>Article</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @top_menus.each do |menu| %>
        <tr>
            <td><%= menu.name %></td>
            <td><%= menu.top_menus.count %></td>
            <td><%= menu.menu_id %></td>
            <td><%= menu.article_id %></td>
            <td><%= link_to 'Show', menu %></td>
            <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
            <td><%= link_to 'Destroy', menu, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

